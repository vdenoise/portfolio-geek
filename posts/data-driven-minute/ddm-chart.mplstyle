figure.figsize: 8, 10

# Background colors
axes.facecolor: white
figure.facecolor: white

# Font properties
font.family: Arial
font.size: 14 

text.color: 12115F
axes.labelcolor: gray
xtick.color: navy
ytick.color: navy
axes.titlecolor: gray
legend.facecolor: white
legend.edgecolor: white

# Grid properties
grid.color: 12115F
grid.linestyle: -
grid.linewidth: 0.25
axes.grid: True
axes.grid.axis: y
axes.edgecolor: gray
axes.linewidth: 1

# Spine properties
axes.spines.top: False
axes.spines.right: False

# Tick properties
xtick.major.size: 0
ytick.major.size: 0
xtick.minor.size: 0
ytick.minor.size: 0

date.autoformatter.month: %y-%b
yaxis.labellocation: top
xaxis.labellocation: right